<div class="container center_div">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <h3> Add a suggestion </h3><br>

      <%= form_for :suggestion, url: suggestions_path, :html => { class: "form-horizontal" } do |f| %>
        <div class="form-group">
          <fieldset>
            <p>
              <%= f.label :name, 'Briefly describe your suggestion' %><br>
              <%= f.text_area :desc, {:cols => "55", :rows => "7", class: "form-control", required:'true'} %>
            </p>

            <div class="control-group">
              <div class="controls">
                <%= f.submit "Add suggestion", { class: 'btn btn-primary' } %>
              </div>
            </div>

          </fieldset>
        </div>

      <% end %>
    </div>
  </div>
</div>

