<div class="container center_div">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1> Issue </h1>
          <fieldset>
            <p>
              <strong> School </strong><br>
              <%= School.find(@issue.school_id).name  %>
            </p>

            <p>
              <strong>Description </strong><br>
              <%= @issue.desc %>
            </p>

            <h4>Comments</h4>
            <% if @issue.comments.empty? %>
              <i> No comments yet!</i>

            <% else %>
              <% @issue.comments.each do |comment| %>
                <p>
                  <strong>Commenter:</strong>
                  <%= comment.commenter %>
                </p>

                <div class="commentBox">
                  <%= comment.body %>
                </div>

                <p>
                  <%= link_to 'Delete comment', [comment.issue, comment],
                                method: :delete,
                                data: { confirm: 'Are you sure?' } %>
                </p>
              <% end %>
            <% end %>

            <h4>Add a comment</h4>
            <%= form_for([@issue, @issue.comments.build]) do |f| %>
              <p>
                <%= f.label :commenter %><br>
                <%= f.text_field :commenter %>
              </p>
              <p>
                <%= f.label :body %><br>
                <%= f.text_area :body %>
              </p>
              <p>
                <%= f.submit "Add comment", { class: 'btn btn-primary' }%>
              </p>
            <% end %>

            <%= link_to root_path, class: 'btn btn-lg btn-primary' do %>
              <i class="glyphicon glyphicon-plus"></i> Home
            <% end %>

          </fieldset>
    </div>
  </div>
</div>